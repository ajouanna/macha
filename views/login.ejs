  <body>
    <h1><%= title %></h1>
    <p>Bienvenue sur <%= title %></p>
    <div id="status">
    <% if (status) { %>
      <p><%= status %></p>
    <% } %>
    </div>
    <form id="login" class="form-signin" action="/login" method="post">
      <h2 class="form-signin-heading">Veuillez vous authentifier</h2>
      <label for="login" class="sr-only">Votre identifiant</label>
      <input id="login" class="form-control" placeholder="Identifiant" type="text" name="login" autofocus/>
      <label for="password" class="sr-only">Votre mot de passe</label>
      <input id="password" class="form-control" placeholder ="Mot de passe" type="password" name="password"/>
      <button type="submit">Valider</button>
    </form>
