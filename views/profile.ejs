<!DOCTYPE html>
<html>
 	<%- include('head'); %>

  <body>
  <%- include('header'); %>

		<nav class="navbar navbar-default">
		  <div class="container-fluid">
			<div class="navbar-header">
			  <a class="navbar-brand" href="/">Matcha</a>
			</div>
			<ul class="nav navbar-nav">
				<li class="active"><a href="/todo">To do list partagée</a></li>	  
				<li><a href="/tchat">Tchat</a></li>
				<li><a href="/logout">Se déconnecter</a></li>
			</ul>
		  </div>
		</nav>
    <div class ="form-group">
	  	<h1><%= title %></h1>
      <h2 class="form-signin-heading">Votre profil</h2>

      <form id="profile-mail" class="profile" action="" method="post" onsubmit="return false;">
        <label for="mail" class="sr-only">Votre mail</label>
        <input id="mail" size="30" placeholder="Adresse Email" type="email" name="mail" required value=<%= data.mail %> />
        <button class="btn" type="submit" onclick="change_profile(this)">Valider</button>
      </form>
    
      <form id="profile-name" class="profile" action="" method="post" onsubmit="return false;">
        <label for="firstname" class="sr-only">Votre prénom</label>
        <input id="firstname"  size="20" type="text" placeholder="Prénom" name="firstname" required  value=<%= data.firstname %> />
        <label for="lastname" class="sr-only">Votre nom de famille</label>
        <input id="lastname"  size="30" type="text" placeholder="Nom de famille" name="lastname" required  value="<%= data.lastname %>" />
        <button class="btn" type="submit" onclick="change_profile(this)">Valider</button>
      </form>

      <form id="profile-gender" class="profile" action="" method="post" onsubmit="return false;">
        <label for="gender" class="sr-only">Votre genre</label>
         <select form="profile-gender" name="gender_id">
         <% for (i=0, n=genders.length; i < n; i++) { %>
          <option value="<%= genders[i].id %>" 
          <% if (data.gender_id == genders[i].id) { %> selected="selected" <% } %> ><%= genders[i].description %>     
          </option>
          <% } %>
        </select>
        <button class="btn" type="submit" onclick="change_profile(this)">Valider</button>
      </form>

      <form id="profile-orientation" class="profile" action="" method="post" onsubmit="return false;">
        <label for="orientation" class="sr-only">Votre orientation sexuelle</label>
        <select form="profile-orientation" name="orientation_id">
         <% for (i=0, n=orientations.length; i < n; i++) { %>
          <option value="<%= orientations[i].id %>" 
           <% if (data.orientation_id == orientations[i].id) { %> selected="selected" <% } %> ><%= orientations[i].description %>
           </option>
          <% } %>
        </select>
        <button class="btn" type="submit" onclick="change_profile(this)">Valider</button>
      </form>

      <form id="profile-bio" class="profile" action="" method="post" onsubmit="return false;">
        <label for="bio" class="sr-only">Votre biographie</label>
        <!-- noter le %- ci-dessous qui permet d'afficher le contenu d'un champ  -->
        <textarea id="bio"  rows="5" cols="30" form="profile-bio" placeholder="bio" name="bio" required><%- data.bio %></textarea>          
        <button class="btn" type="submit" onclick="change_profile(this)">Valider</button>
      </form>

    </div>
	<%- include('footer'); %>
  <script src = "javascripts/profile_client.js"></script>

  </body>
</html>
